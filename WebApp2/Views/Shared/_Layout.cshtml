<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">DNF-App</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "" })">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("System", "Home", new { area = "" })">System Info</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="containerizationDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Containerization Overview
                        </a>
                        <div class="dropdown-menu" aria-labelledby="containerizationDropdown">
                            <a class="dropdown-item" href="@Url.Action("Docker", "Home", new { area = "" })">Docker</a>
                            <a class="dropdown-item" href="@Url.Action("Kubernetes", "Home", new { area = "" })">Kubernetes</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Docker", "Home", new { area = "" })">Docker</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Kubernetes", "Home", new { area = "" })">Kubernetes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Database", "Home", new { area = "" })">Database</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Exemplar ASP-DotNet Framework App for AKS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
